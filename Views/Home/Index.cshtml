<!--? New Arrival-2 Start -->
<div class="new-arrival new-arrival2">
    <div class="container">
        <!-- Section tittle -->
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="section-title mb-60 text-center wow fadeInUp" data-wow-duration="2s" data-wow-delay=".2s">
                    <h2 style="margin-left: 450px;">PRODUCTS YOU MAY LIKE</h2>
                    <P style="margin-left: 450px;">Lorem ipsum dolor sit amet, consectetur adipiscing elit. In venenatis ultricies orci at blandit. Mauris molestie, mi in pharetra egestas, sapien tellus porttitor tortor, eget vehicula erat libero eget elit.</P>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model.ListOfProducts)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="product-grid3">
                        <div class="product-image3">
                            <a href="#">
                                <img class="pic-1" src="~/ProductImg/@item.ProductImage">
                                <img class="pic-2" src="~/ProductImg/@item.ProductImage">
                            </a>
                            <ul class="social">
                                @*<li><a href="#"><i class="fa fa-shopping-bag"></i></a></li>*@
                                <li>
                                    @if (item.Quantity > 0)
                                    {
                                        using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductId, url = "Index" }, FormMethod.Post))
                                        {
                                            <button type="submit"><i class="fa fa-shopping-cart"></i></button>
                                        }
                                    }
                                </li>
                                @*<li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>*@
                            </ul>
                            @if (item.Quantity > 0)
                            {
                                <span class="product-new-label">New</span>
                            }
                            else
                            {
                                <span class="product-new-label">Out of Stock</span>
                            }

                        </div>
                        <div class="product-content">
                            <h3 class="title"><a href="#">@item.ProductName</a></h3>
                            <div class="price">
                                $@item.Price
                                @*<span>$75.00</span>*@
                            </div>
                            <ul class="rating">
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star"></li>
                                <li class="fa fa-star disable"></li>
                                <li class="fa fa-star disable"></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>


    </div>

</div>
<div class="container" style="justify-content: center;margin-left: 650px;">
    @Html.PagedListPager(Model.ListOfProducts, page => Url.Action("Index", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayItemSliceAndTotal = true })
</div>

